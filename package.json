{
  "name": "eslint-plugin-github-action",
  "type": "module",
  "version": "0.0.6",
  "packageManager": "pnpm@9.14.4",
  "description": "Rules for consistent, readable and valid GitHub action files.",
  "keywords": [
    "eslint",
    "eslint-plugin",
    "github-action"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/eslint-plugin-github-action#readme",
  "repository": "ntnyq/eslint-plugin-github-action",
  "bugs": {
    "url": "https://github.com/ntnyq/eslint-plugin-github-action/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "coverage": "vitest --coverage",
    "deploy": "run-s build docs:build",
    "dev": "tsup --watch src",
    "docs:build": "pnpm -C docs run build",
    "docs:dev": "pnpm -C docs run dev",
    "lint": "eslint .",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "run-s release:check release:publish",
    "release:check": "run-s lint typecheck test",
    "release:publish": "bumpp && pnpm publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "eslint": "^9.5.0"
  },
  "dependencies": {
    "@ntnyq/utils": "^0.3.1",
    "@typescript-eslint/utils": "^8.16.0",
    "yaml-eslint-parser": "catalog:"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^3.7.1",
    "@ntnyq/prettier-config": "^1.22.0",
    "@types/node": "^22.10.1",
    "@vitest/coverage-v8": "^2.1.6",
    "bumpp": "^9.8.1",
    "eslint": "^9.16.0",
    "eslint-plugin-eslint-plugin": "^6.3.2",
    "eslint-plugin-github-action": "workspace:*",
    "eslint-vitest-rule-tester": "^0.6.1",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^7.0.1",
    "prettier": "^3.4.1",
    "tinyglobby": "^0.2.10",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0",
    "vitest": "^2.1.6"
  },
  "engines": {
    "node": "^18.18.0 || ^20.9.0 || >=21.1.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "@ntnyq/utils": "patches/@ntnyq__utils.patch"
    }
  },
  "prettier": "@ntnyq/prettier-config",
  "nano-staged": {
    "*.{js,ts,mjs,cjs,vue,json,md,yml,yaml}": "eslint --fix"
  }
}
