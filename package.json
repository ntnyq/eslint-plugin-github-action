{
  "name": "eslint-plugin-github-action",
  "type": "module",
  "version": "0.1.0",
  "packageManager": "pnpm@10.28.0",
  "description": "Rules for consistent, readable and valid GitHub action files.",
  "keywords": [
    "eslint",
    "eslint-plugin",
    "github-action"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/eslint-plugin-github-action#readme",
  "repository": "ntnyq/eslint-plugin-github-action",
  "bugs": {
    "url": "https://github.com/ntnyq/eslint-plugin-github-action/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "coverage": "vitest --coverage",
    "deploy": "run-s build docs:build",
    "dev": "tsdown --watch",
    "docs:build": "pnpm -C docs run build",
    "docs:dev": "pnpm -C docs run dev",
    "lint": "eslint",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "run-s release:check release:version",
    "release:check": "run-s lint typecheck test",
    "release:version": "bumpp",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "eslint": "^9.5.0"
  },
  "dependencies": {
    "@ntnyq/utils": "^0.11.0",
    "@types/json-schema": "^7.0.15",
    "uncase": "^0.2.0",
    "yaml-eslint-parser": "^2.0.0"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^5.9.0",
    "@ntnyq/prettier-config": "^3.0.1",
    "@types/node": "^24.10.9",
    "@vitest/coverage-v8": "^4.0.17",
    "bumpp": "^10.4.0",
    "eslint": "^9.39.2",
    "eslint-plugin-eslint-plugin": "^7.3.0",
    "eslint-plugin-github-action": "workspace:*",
    "eslint-vitest-rule-tester": "^3.0.1",
    "husky": "^9.1.7",
    "nano-staged": "^0.9.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.8.0",
    "tinyglobby": "^0.2.15",
    "tsdown": "^0.20.0-beta.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": "^20.19.0 || ^22.13.0 || >=24"
  },
  "nano-staged": {
    "*.{js,ts,mjs,cjs,vue,svg,md,yml,yaml,json}": "eslint --fix",
    "*.{css,scss,html}": "prettier -uw"
  }
}
