{
  "name": "eslint-plugin-github-action",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@9.13.2",
  "description": "Rules for consistent, readable and valid GitHub action files.",
  "keywords": [
    "eslint",
    "eslint-plugin",
    "github-action"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/eslint-plugin-github-action#readme",
  "repository": "ntnyq/eslint-plugin-github-action",
  "bugs": {
    "url": "https://github.com/ntnyq/eslint-plugin-github-action/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "coverage": "vitest --coverage",
    "dev": "tsup --watch src",
    "docs:build": "pnpm -C docs run build",
    "docs:dev": "pnpm -C docs run dev",
    "lint": "eslint .",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "run-s release:check release:publish",
    "release:check": "run-s lint typecheck test",
    "release:publish": "bumpp && pnpm publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "eslint": "^9.0.0"
  },
  "dependencies": {
    "@typescript-eslint/utils": "^8.14.0",
    "yaml-eslint-parser": "^1.2.3"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^3.2.2",
    "@ntnyq/prettier-config": "^1.21.3",
    "@vitest/coverage-v8": "^2.1.5",
    "bumpp": "^9.8.1",
    "eslint": "^9.15.0",
    "eslint-plugin-eslint-plugin": "^6.3.2",
    "eslint-vitest-rule-tester": "^0.6.1",
    "husky": "^9.1.6",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^7.0.1",
    "prettier": "^3.3.3",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0",
    "vitest": "^2.1.5"
  },
  "engines": {
    "node": "^18.18.0 || ^20.9.0 || >=21.1.0"
  },
  "prettier": "@ntnyq/prettier-config",
  "nano-staged": {
    "*.{js,ts,mjs,cjs,json,md,yml,yaml}": "eslint --fix"
  }
}
